<% include ../partials/cms/header %>
<div id="wrapper">
   <% include ../partials/cms/nav %>
   <!-- Page Content -->
   <div id="page-wrapper">
      <div class="container-fluid">
         <div class="row">
            <div class="col-lg-12">
               <h3>Email the customers</h3>
               <hr>
               <div
                  class="form-area">
                  <form action="/admin/mail" method="POST">
                     <br style="clear:both">
                     <h3 style="margin-bottom: 25px; text-align: center;">Email Form</h3>
                     <div class="form-group">
                        <input type="text" class="form-control" id="email" name="email" placeholder="To Email" required>
                     </div>
                     <div class="form-group">
                        <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
                     </div>
                     <div class="form-group">
                        <textarea class="form-control" type="textarea" name="message" placeholder="Message" rows="7"></textarea>
                     </div>
                     <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
                  </form>
               </div>
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
   </div>
   <!-- /#page-wrapper -->
</div>
<% include ../partials/cms/footer %>
